{
  "name": "luca",
  "version": "0.0.1",
  "description": "Data mining utilities for Final Fantasy Record Keeper",
  "main": "index.js",
  "author": "Josh Kelley <joshkel@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "tslint --project .",
    "test": "jest",
    "test:watch": "jest --watch",
    "get-enlir": "ts-node src/download-enlir.ts -o src/enlir",
    "get-battle-args-gl": "jscodeshift --run-in-band --dry --transform src/get-battle-args.js tmp/gl/battle.js --lang=gl",
    "get-battle-args-jp": "jscodeshift --run-in-band --dry --transform src/get-battle-args.js tmp/jp/battle.js --lang=jp",
    "get-battle-args": "npm run get-battle-args-gl && npm run get-battle-args-jp",
    "copy-json": "copyfiles \"./src/gl/*.json\" \"./src/jp/*.json\" dist --up 1 && copyfiles \"./src/enlir/*.json\" dist --up 1",
    "postget-enlir": "yarn copy-json",
    "postget-battle-args": "yarn copy-json"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.{ts,tsx}",
      "!**/__tests__/**"
    ],
    "coverageReporters": [
      "html"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.10",
    "@types/number-to-words": "^1.2.0",
    "@types/sprintf-js": "^1.1.1",
    "@types/strip-bom": "^3.0.0",
    "@types/yargs": "^13.0.0",
    "axios": "^0.21.1",
    "babylon": "^6.18.0",
    "copyfiles": "^2.1.0",
    "fs-extra": "^7.0.1",
    "google-auth-library": "^2.0.1",
    "googleapis": "^39.1.0",
    "jest": "^23.6.0",
    "js-beautify": "^1.8.8",
    "jscodeshift": "^0.5.1",
    "lodash": "^4.17.21",
    "logform": "^1.10.0",
    "number-to-words": "^1.2.4",
    "prettier": "^1.15.2",
    "quicktype": "^15.0.155",
    "safe-eval": "^0.4.1",
    "sprintf-js": "^1.1.1",
    "strip-bom": "^3.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.1.6",
    "underscore": "^1.12.1",
    "winston": "^3.1.0",
    "yargs": "^13.2.2"
  }
}
